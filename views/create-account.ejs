<!DOCTYPE html>
<html lang="en">
<head>
    <title>Create Account</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login Form</title>
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/login-formstyles.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,500,700&display=swap" rel="stylesheet">
</head>
<body>
<div  id="google_translate_element"></div>
    <div class="form-container">
        <div class="img-section img-vis" id="member-log-img" >
            <img src="./images/modi.png" class="modi-img" >
        </div>
        <div class="form-section">
            <p class="form-title">Member Sign-Up</p>
            <form action="/verifySignupOTP" method="post" class="form">
                <div class="form-group">
                    <input type="text" id="adhaar" name="adhaar" class="otpfield" required placeholder="Enter Adhaar number...">
                </div>
                <div class="form-group">
                    <input type="text" id="num" name="num" class="otpfield" required placeholder="Enter Phone number...">
                </div>
                <div class="form-group">
                    <button id="otp">Generate OTP</button>
                </div>
                <div class="form-group">
                    <a href="/login" id="create_acc">Go Back</a>
                </div>
            </form>
        </div>

    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="./js/create-account-form.js"></script>
    <script type="text/javascript">
function googleTranslateElementInit() {
  new google.translate.TranslateElement({pageLanguage: 'en', includedLanguages: 'bn,en,gu,hi,kn,ml,mr,ta,te,ur', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
}
</script>

<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</body>
</html>