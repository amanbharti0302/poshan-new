<div class="w3-container w3-center w3-animate-left" id="list" style="display: none;width: 100%;">
  <div class="w3-white w3-row-padding formdiv">
    <div class="w3-container" style="text-align: left;color: #465881;">




  

        <% for(var i=0;i<result.length;i++) { %>
           <h3 class="removehead oof"  style="margin-bottom: 24px;margin-right: 0" id=<%=result[i].vcode%>><%=result[i].vcode%> <i class="fas fa-chevron-down w3-right" style="font-size: 2rem" ></i></h3>
           <div class="vaccinelistdiv <%=result[i].vcode%>" style="padding: 0 0 0 16px ;display: none;">
            <h5><strong>Name:&emsp;</strong><%=result[i].name%></h5>
             <h5><strong>For:&emsp;</strong><%=result[i].for%></h5>
             <h5><strong>Dose:&emsp;</strong><%=result[i].dose%> ml</h5>
             <h5><strong>Site:&emsp;</strong><%=result[i].site%></h5>
             <h5><strong>Route:&emsp;</strong><%=result[i].route%></h5>
             <h5><strong>When:&emsp;</strong><%=result[i].when%></h5>
           </div>
       <% } %>
</div>
