<div class="w3-panel w3-half" style="margin-top: 0;">
  <div class="w3-white w3-row-padding formdiv">
    <div class="w3-container">
          <h3 class="removehead" id="addNewVaccinebtn" style="margin-bottom: 24px;margin-right: 0">Add New Vaccine  <i class="fas fa-chevron-down w3-right" style="font-size: 2rem"></i></h3>
        <form class="form-adduser" action="/dashboard/vaccinelist/addVaccine" method="post" style="display:none" id="addNewVaccine">




          <div class="w3-row-padding">
            <div class="field">
              <label class="w3-text">Vaccine Name <span class="w3-text-red">*</span></label>
              <input required class="w3-input w3-hover-light-grey w3-border" id="name" name="name" type="text">
            </div>
          </div>
          <div class="w3-row-padding">
            <div class="field">
              <label class="w3-text">Vaccine Code <span class="w3-text-red">*</span></label>
              <input required class="w3-input w3-hover-light-grey w3-border" id="vcode" name="vcode" type="text">
            </div>
          </div>
          <div class="w3-row-padding">
            <div class=" field">
                <label class="w3-text">Dose <span class="w3-text-red">*</span></label>
                <input class="w3-input w3-hover-light-grey w3-border" placeholder="in ml" name="dose" type="text">
              </div>
          </div>
          <div class="w3-row-padding">
            <div class="field" >
             <label class="w3-text">When to give <span class="w3-text-red">*</span></label>
                <input required class="w3-input w3-hover-light-grey w3-border" name="when" type="text">
              </div>
          </div>
          <div class="w3-row-padding">
            <div class="field">
              <label class="w3-text">Route <span class="w3-text-red">*</span></label>
              <select required class="w3-input w3-hover-light-grey w3-border" name="route">
                <option value="intramuscular">Intra-muscular</option>
                <option value="intradermal">Intra-dermal</option>
                <option value="oral">Oral</option>
                <option value="subcutaneous">Sub-cutaneous</option>
                <option value="other">Other</option>
              </select>
            </div>
          </div>
          <div class="w3-row-padding">
            <div class="field">
              <label class="w3-text">Site <span class="w3-text-red">*</span></label>
              <select required class="w3-input w3-hover-light-grey w3-border" name="site">
                <option value="upperarm">Upper Arm</option>
                <option value="leftupperarm">Left Upper Arm</option>
                <option value="anterolateralsideofmidthigh">Antero-lateral side of midthigh </option>
                <option value="oral">Oral</option>
                <option value="rightupperarm">Right Upper Arm</option>
                <option value="other">Other</option>
              </select>
            </div>
          </div>
          <div class="w3-row-padding">
            <div class=" field">
              <label class="w3-text">For <span class="w3-text-red">*</span></label>
              <select required class="w3-input w3-hover-light-grey w3-border" name="for">
                <option value="infant">Infant (upto 16 months)</option>
                <option value="children">Children (above 16 months)</option>
                <option value="women">Women</option>
                <option value="other">Other</option>
              </select>
            </div>
          </div>
          <div class="w3-row-padding">
            
            <div class="w3-full">
            <input type="submit" class="w3-button addusersubmit2" value="Add"></div>
          </div>  
          
        </form>

        <!-- <h3 class="removehead" id="removeheader" style="margin-bottom: 24px;margin-right: 0">Remove a User <i class="fas fa-chevron-down w3-right" style="font-size: 2rem"></i></h3> -->
        
      </div>
    </div>
  </div>







